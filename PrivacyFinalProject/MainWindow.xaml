<Window x:Class="PrivacyFinalProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:PrivacyFinalProject.ViewModel"
        xmlns:view="clr-namespace:PrivacyFinalProject.View"
        xmlns:local="clr-namespace:PrivacyFinalProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <ContentControl Content="{Binding CurrentViewModel}">
        <ContentControl.Resources>
            
            <DataTemplate DataType="{x:Type viewModel:LoginViewModel}">
                <view:LoginView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:CreateAccountViewModel}">
                <view:CreateAccountView/>
            </DataTemplate>
        </ContentControl.Resources>
    </ContentControl>
</Window>
